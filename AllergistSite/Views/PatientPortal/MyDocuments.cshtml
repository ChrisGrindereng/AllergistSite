            <div class="panel-heading noNote">
                <div class="title-right"></div>
                <div class="panel-title">Patient Forms</div>
            </div>
            <hr/>
            <a href="~/documents/hb300_auth_form.pdf">
                <div class="card card-2">
                    <p style="text-decoration:underline">Patient Authorization Disclosure Form</p>
                    <img class="card-img-top" src="~/Images/AuthorizationDisclosureForm.png" />
                </div>
            </a>
            <a href="~/documents/New_Patient_Sheet.pdf">
                <div class="card card-2">
                    <p style="text-decoration:underline">New Patient Information Form</p>
                    <img class="card-img-top" src="~/Images/NewPatientInfo.png" />
                </div>
            </a>
            <a href="~/documents/notice.pdf">
                <div class="card card-2">
                    <p style="text-decoration:underline">Patient Privacy Notice Form </p>
                    <img class="card-img-top" src="~/Images/PrivacyNotice.png" />
                    </div>
                </a>

