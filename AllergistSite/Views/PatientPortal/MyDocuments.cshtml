
@{
    ViewBag.Title = "MyDocuments";
    Layout = "~/Views/Shared/_LayoutPatientPortal.cshtml";
}

<div class="bhoechie-tab">
    <div class="bhoechie-tab-content active">
        <p style="font-size:medium;margin-bottom:20px;">Here you can view and upload documents related to your care.</p>
